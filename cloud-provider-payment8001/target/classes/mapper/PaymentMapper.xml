<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.payment.springcloud.dao.PaymentDao">

    <!--<select id="getPaymentById" resultType="com.payment.springcloud.entities.Payment">-->
    <!--basePaymentMapper 映射-->
    <resultMap id="basePaymentMapper" type="com.commons.springcloud.entities.Payment">
        <id column="id" property="id" jdbcType="BIGINT"></id>
        <id column="serial" property="serial" jdbcType="VARCHAR"></id>
    </resultMap>


    <select id="getPaymentById" parameterType="Long" resultMap="basePaymentMapper">
        select * from payment where id = #{id}
    </select>

    <insert id="create" parameterType="com.commons.springcloud.entities.Payment" useGeneratedKeys="true" keyProperty="id">
        insert into payment (`serial`) values (#{serial})
    </insert>


</mapper>